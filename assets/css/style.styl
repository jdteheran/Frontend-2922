azul = #22bce0
naranja = #dd4f24

@font-face {
    font-family: 'Open Sans';
    src: url(../fonts/OpenSans/OpenSans-Regular.ttf);
}

@font-face {
  font-family: 'iconitos';
  src:  url('../fonts/Iconos/icomoon.eot?jzdv36');
  src:  url('../fonts/Iconos/icomoon.eot?jzdv36#iefix') format('embedded-opentype'),
    url('../fonts/Iconos/icomoon.ttf?jzdv36') format('truetype'),
    url('../fonts/Iconos/icomoon.woff?jzdv36') format('woff'),
    url('../fonts/Iconos/icomoon.svg?jzdv36#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

html
    font-family: 'Open Sans'

header
    background: #444
    .logo
        display: inline-block
        border-right: 1px solid azul
        padding: 0 30px 0 15px
        margin: 15px 0
        img
            width: 100px
    .title-actions
        display: inline-block
        vertical-align: top
        margin: 10px 0 0 10px
        .title
            h1
                color: white
                font-size: 25px
                margin-bottom: 5px
        .subtitle
            h3
                color: azul
                font-size: 18px
                margin-bottom: 5px
                font-weight: bold
                font-style: italic
        .actions 
            a
                color: naranja
                text-decoration: none
            a:first-child
                font-size: 16px
            a:nth-child(2)
                font-size: 18px
            a:last-child
                font-size: 21px
    .avatar-action
        display: inline-block
        float: right
        margin-top: 15px
        margin-right: 15px
        .btn-publisher
            display: inline-block
            background: naranja
            vertical-align: top 
            margin-top: calc(50px - (16px / 2) - 5px)
            padding: 5px 20px
            a
                text-decoration: none
                p
                    color: white
                    font-style: italic
                    .ico:before
                        font-family: 'iconitos'
                        content: '\e908'
                        font-size: 35px
                        color: white
                        margin-right: 10px
                        
        .avatar
            display: inline-block
            img
                width: 100px
                border-radius: 50%
        .action
            display: inline-block
            vertical-align: top 
            margin-top: calc(50px - (16px / 2) - 5px)
            padding: 5px 5px
            background: naranja
            p
                .ico
                    transform: rotate(90deg)
                    display: inline-block
                .ico:after
                    font-family: 'iconitos'
                    content: '\ea1c'
                    font-size: 15px
                    color: white
    .emptybox
        clear: both
nav
    background: azul
    padding: 10px 0 15px 0
    ul
        li
            display: inline-block
            margin-left: 25px
            a
                color: white
                text-decoration: none