azul = #22bce0
naranja = #dd4f24

@font-face {
    font-family: 'Open Sans';
    src: url(../fonts/OpenSans/OpenSans-Regular.ttf);
}

html
    font-family: 'Open Sans'

header
    background: #444
    .logo
        display: inline-block
        border-right: 1px solid azul
        padding: 0 30px 0 15px
        margin: 15px 0
        img
            width: 100px
    .title-actions
        display: inline-block
        vertical-align: top
        margin: 10px 0 0 10px
        .title
            h1
                color: white
                font-size: 25px
                margin-bottom: 5px
        .subtitle
            h3
                color: azul
                font-size: 18px
                margin-bottom: 5px
                font-weight: bold
                font-style: italic
        .actions 
            a
                color: naranja
                text-decoration: none
            a:first-child
                font-size: 16px
            a:nth-child(2)
                font-size: 18px
            a:last-child
                font-size: 21px
    .avatar-action
        border: 2px solid #333
        display: inline-block
        float: right 